{
  "quiet": true,
  "legacyWatch": false,
  "delay": 0.1,
  "watch": [
    "../.env",
    ".browserslistrc",
    ".editorconfig",
    ".env",
    ".eslint.config.mjs",
    ".prettierignore",
    ".prettierrc",
    "config",
    "babel-node.config.js",
    "eslint.config.mjs",
    "next.config.ts",
    "package.json",
    "src",
    "tsconfig.json",
    "playwright.config.ts",
    "postcss.config.js",
    "stylelint.config.js",
    "vitest.config.mts",
    "webpack.config.js",
    "yarn.lock"
  ],
  "ext": "js,jsx,ts,tsx,json,flow,css,scss,sass,styl,html,ejs,d,txt,yml,sh",
  "ignore": [".build", ".next", "node_modules", ".cache", ".coverage", ".playwright-report"],
  "exec": "yarn lint && echo '\u2714 OK' || echo '\u274C FAILED' || cd ."
}
