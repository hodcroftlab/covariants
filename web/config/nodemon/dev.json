{
  "quiet": true,
  "legacyWatch": false,
  "delay": 0.1,
  "watch": [
    "../.env",
    ".browserslistrc",
    ".editorconfig",
    ".env",
    ".eslintignore",
    ".eslintrc.js",
    ".prettierignore",
    ".prettierrc",
    "babel.config.js",
    "config",
    "next.config.ts",
    "package.json",
    "postcss.config.js",
    "schemas",
    "stylelint.config.js",
    "tsconfig.json",
    "webpack.config.js",
    "yarn.lock"
  ],
  "ext": "js,jsx,ts,tsx,json,flow,css,scss,sass,styl,html,ejs,d,txt,yml,sh",
  "ignore": ["**/*.test.*s", "**/*.test.*sx", "**/__tests__", ".build", "node_modules"],
  "exec": "run-s -c clear dev:clean dev:start || cd ."
}
